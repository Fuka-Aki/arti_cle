<%= render 'shared/header' %>
<div class="background-image" style="background: url(<%= asset_path "sign_up.jpg" %>);">
  <%= form_with model: @user, url: user_registration_path, method: :post, class: 'container', local: true do |f| %>
  <div class="text-center">
    <div class='form-title'>Sign up</div>
    <%= render "shared/error_messages", model: @user %>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">Nickname</label>
        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
      </div>
      <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"ニックネーム", maxlength:"40" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">E-mail</label>
        <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレス", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">Password</label>
        <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の英数字" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">password_confirmation</label>
        <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"確認用" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'btn-group btn-warning btn-lg' %>
    </div>
  </div>
  <% end %>
</div>