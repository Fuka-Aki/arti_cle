<% if current_user.already_favorited?(room) %>
  <%= link_to room_favorites_path(room), method: :delete, remote: true do %>
    <i class="glyphicon glyphicon-heart" style="color: red;"></i>
  <% end %>
  <span style="color: red;"><%= room.favorites.count %></span>
<% else %>
  <%= link_to room_favorites_path(room), method: :post, remote: true do %>
    <i class="glyphicon glyphicon-heart"></i>
  <% end %>
  <%= room.favorites.count %>
<% end %>