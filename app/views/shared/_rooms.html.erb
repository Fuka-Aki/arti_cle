<%# 投稿したアーティストを表示 %>
<div class="pickup-artist">
  <div class="page-header">Pick Up Artist</div>
  </div>
  <div class="row">
    <% if @rooms.present? %>
      <% @rooms.each do |room| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= room.artist_name %>
          <%= image_tag room.image, class: "room-img" if room.image.attached?  %>
          <div class="caption">
          <%= link_to 'チャットに参加', room_messages_path(room), class: "btn btn-primary", role: "button" %>
          </div>
        </div>
      </div>
      <% end %>
    <% else %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= image_tag "sample.jpg", class: "room-img" %>
        <div class="caption">
          <h3>好きなアーティストのチャットを作ろう！</h3>
          <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
        </div>
      </div>
    </div>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= image_tag "sample.jpg", class: "room-img" %>
        <div class="caption">
          <h3>チャットに参加して皆で語り合おう！</h3>
