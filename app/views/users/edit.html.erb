<div class="background-image" style="background: url(<%= asset_path "profile-cover.jpg" %>);">
  <div class="text-center">
  <%= form_with model: @user, url: user_path(@user.id), method: :patch, local: true do |f| %>
    <div class='form-title'>Profile Edit</div>
    <%= render "shared/error_messages", model: @user %>
      <div class='profile-form'>
        <div class="form-group image">
          <div class="profile-image-preview">
            <% if @user.image.present? %>
            <label class="form-text-wrap">
              <%= image_tag @user.image, alt: "profile-image", id: "image", size: "150" %>
              <%= f.file_field :image, class: "hidden" %>
              <div id='image-list' class="profile"></div>
            </label>
            <% else %>
            <label>
              <%= image_tag "profile.jpg", alt: "profile-image", id: "image", size: "150" %>
              <%= f.file_field :image, class: "hidden" %>
              <div id='image-list' class="profile"></div>
            </label>
            <% end %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">Nickname</label>
          <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
        </div>
        <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"ニックネーム", maxlength:"40" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">E-mail</label>
          <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレス", autofocus: true %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">Profile</label>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </div>
        <%= f.text_area :introduction, class:"input-default", autofocus: true, autocomplete: "introduction", placeholder:'自己紹介しましょう!'%>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">Address</label>
          <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
        </div>
        <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">Generation</label>
          <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
        </div>
        <%= f.collection_select(:generation_id, Generation.all, :id, :name, {}, {class:"select-box", id:"generation"}) %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">Gender</label>
          <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
        </div>
        <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"select-box", id:"gender"}) %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: 'btn-group btn-warning btn-lg' %>
      </div>
    </div>
  </div>
  <% end %>
</div>
